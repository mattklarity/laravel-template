{
  "name": "klarity/librems-test",
  "description": "This is my package librems-test",
  "keywords": ["Klarity", "laravel", "librems-test"],
  "homepage": "https://github.com/klarity/librems-test",
  "license": "MIT",
  "authors": [
    { "name": "Matthew Ryder", "email": "matthew.r@klaritymonitoring.com", "role": "Developer" }
  ],

  "require": {
    "php": "^8.2",
    "illuminate/contracts": "^10.0 || ^11.0 || ^12.0",
    "librenms/plugin-interfaces": "^1.0",
    "spatie/laravel-package-tools": "^1.16"
  },

  "require-dev": {
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.14",
    "nunomaduro/collision": "^8.0",
    "orchestra/testbench-core": "^10.0",
    "pestphp/pest": "^2.34",
    "pestphp/pest-plugin-arch": "^2.3",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-phpunit": "^2.0",
    "spatie/laravel-ray": "^1.35"
  },

  "autoload": {
    "psr-4": {
      "Klarity\\LibremsTest\\": "src/",
      "Klarity\\LibremsTest\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Klarity\\LibremsTest\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/"
    }
  },

  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },

  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },

  "extra": {
    "laravel": {
      "providers": [
        "Klarity\\LibremsTest\\LibremsTestServiceProvider"
      ],
      "aliases": {
        "LibremsTest": "Klarity\\LibremsTest\\Facades\\LibremsTest"
      }
    }
  },

  "minimum-stability": "dev",
  "prefer-stable": true
}
